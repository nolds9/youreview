<h2 class="title">
  New comment for <%=@bookreview.name.titleize%>
</h2>
<div class="title">
  <%=form_for([@bookreview, @comment], url: bookreview_comments_post_path ) do |f| %>

    <%=f.label "Title"%><br>
    <%=f.text_field :title%><br>

    <%=f.label :text%><br>
    <%=f.text_area :text, rows: 10, cols: 60%><br>

    <%=f.submit%>
  <%end%>
</div>
