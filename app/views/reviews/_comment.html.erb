<div class="title">
  <%@comments.each do |comment|%>
    <h3>
      <%=comment.title%>
    </h3>
    <p>
      <%=comment.text%>
    </p>
    <p class="ital">
      By <%=comment.user.email%>
    </p>
    <%if current_user == @review.user || current_user == comment.user%>
      <%=link_to "(Remove Comment)", review_comment_path(@review, comment), :method => :delete%>
    <%end%>
    <hr>
  <%end%>
</div>
